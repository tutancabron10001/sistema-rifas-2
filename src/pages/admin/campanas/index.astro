---
import { db } from '../../../db/client';
import { campaigns, events } from '../../../db/schema';
import "../../../styles/global.css";

// Verificar autenticación
if (!Astro.cookies.has("admin_session")) {
  return Astro.redirect("/admin/login");
}

const list = await db.select().from(campaigns).orderBy(campaigns.createdAt);
const eventRows = await db.select().from(events);
const eventsByCampaign = new Map<number, typeof eventRows[number]>();
for (const ev of eventRows) {
  if (!eventsByCampaign.has(ev.campaignId)) {
    eventsByCampaign.set(ev.campaignId, ev);
  }
}
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Campañas — Administración</title>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .campaign-card {
        animation: fadeIn 0.6s ease-out;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-950 via-pink-950 to-black text-white">
    <!-- Animated background elements -->
    <div class="fixed inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 -left-48 w-96 h-96 bg-pink-500/20 rounded-full blur-3xl animate-pulse"></div>
      <div class="absolute bottom-1/4 -right-48 w-96 h-96 bg-rose-500/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 2s;"></div>
    </div>

    <!-- Header -->
    <header class="absolute top-0 left-0 right-0 z-10 p-6">
      <div class="flex items-center justify-between max-w-7xl mx-auto">
        <a href="/admin" class="group flex items-center gap-2 text-pink-200 hover:text-pink-100 transition-all duration-300">
          <svg class="w-6 h-6 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="font-medium">Volver</span>
        </a>
        <div class="text-center">
          <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-pink-300 via-rose-300 to-pink-400 bg-clip-text text-transparent">
            Gestión de Campañas
          </h1>
          <p class="text-sm text-pink-200/70 mt-1">Administra las campañas y eventos</p>
        </div>
        <div class="w-24"></div>
      </div>
    </header>

    <main class="relative z-10 max-w-7xl mx-auto pt-32 pb-12 px-4">
      <!-- Botón Agregar -->
      <div class="flex justify-end mb-6">
        <a href="/admin/campanas/agregar" class="bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-500 hover:to-rose-500 text-white font-bold py-3 px-6 rounded-lg shadow-lg shadow-pink-500/50 hover:shadow-2xl hover:shadow-pink-500/60 transform hover:scale-[1.02] active:scale-95 transition-all duration-300 inline-flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Agregar Campaña
        </a>
      </div>

      <div class="grid grid-cols-1 gap-6">
        {list.length === 0 ? (
          <div class="campaign-card text-center py-12">
            <div class="bg-gradient-to-br from-pink-900/30 to-rose-900/30 backdrop-blur-xl rounded-2xl p-12 border border-pink-500/30">
              <svg class="w-24 h-24 mx-auto text-pink-300/30 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
              </svg>
              <p class="text-xl text-pink-200">Aún no hay campañas</p>
              <p class="text-pink-200/60 mt-2">Comienza creando tu primera campaña</p>
            </div>
          </div>
        ) : (
          list.map((c) => {
            const evento = eventsByCampaign.get(c.id);
            return (
              <div class="campaign-card">
                <div class="bg-gradient-to-br from-pink-900/30 to-rose-900/30 backdrop-blur-xl rounded-2xl p-6 border border-pink-500/30 shadow-xl hover:border-pink-400/50 hover:shadow-2xl hover:shadow-pink-500/20 transition-all duration-300">
                  <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    {/* Imagen */}
                    <div class="md:col-span-1">
                      {c.imageUrl ? (
                        <img src={c.imageUrl} alt={c.name} class="w-full h-64 object-cover rounded-lg border border-pink-500/20" />
                      ) : (
                        <div class="w-full h-64 bg-gray-900/50 rounded-lg flex items-center justify-center border border-pink-500/20">
                          <svg class="w-16 h-16 text-pink-300/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                          </svg>
                        </div>
                      )}
                    </div>

                    {/* Datos de la campaña */}
                    <div class="md:col-span-2 space-y-4">
                      <div>
                        <h2 class="text-3xl font-bold text-pink-100 mb-2">{c.name}</h2>
                        {c.description ? (
                          <p class="text-pink-200/80 leading-relaxed">{c.description}</p>
                        ) : (
                          <p class="text-pink-200/50 italic">Sin descripción</p>
                        )}
                      </div>

                      {/* Configuración */}
                      <div>
                        <span class="inline-block px-3 py-1 bg-pink-500/30 text-pink-200 rounded-full text-sm font-medium border border-pink-400/30">
                          {c.numbersMode}
                        </span>
                      </div>

                      <div class="grid grid-cols-2 gap-4">
                        <div class="bg-gradient-to-br from-green-900/30 to-emerald-900/30 p-4 rounded-lg border border-green-500/30">
                          <span class="text-xs text-green-300/70 block uppercase tracking-wider">Precio Normal</span>
                          <span class="text-2xl font-bold text-green-200">${c.price.toLocaleString()}</span>
                        </div>
                        {c.promoPrice && (
                          <div class="bg-gradient-to-br from-orange-900/30 to-amber-900/30 p-4 rounded-lg border border-orange-500/30">
                            <span class="text-xs text-orange-300/70 block uppercase tracking-wider">Precio Promoción</span>
                            <span class="text-2xl font-bold text-orange-200">${c.promoPrice.toLocaleString()}</span>
                          </div>
                        )}
                      </div>

                      {/* Información del evento */}
                      {evento ? (
                        <div class="bg-gradient-to-br from-indigo-900/30 to-purple-900/30 p-4 rounded-lg border border-indigo-500/30">
                          <h3 class="font-semibold text-indigo-200 mb-2">Evento Asociado</h3>
                          <div class="space-y-1 text-sm text-indigo-200/80">
                            <div><span class="font-medium">Nombre:</span> {evento.name}</div>
                            <div><span class="font-medium">Fecha de rifa:</span> {new Date(evento.raffleDate).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</div>
                            <div><span class="font-medium">Creado:</span> {new Date(evento.createdAt).toLocaleDateString('es-ES')}</div>
                          </div>
                        </div>
                      ) : (
                        <div class="bg-yellow-900/30 p-3 rounded-lg border border-yellow-500/30 text-yellow-200 text-sm">
                          ⚠️ Sin evento asociado
                        </div>
                      )}

                      <div class="flex items-center justify-between pt-2">
                        <span class="text-xs text-pink-200/50">Creada: {new Date(c.createdAt).toLocaleDateString('es-ES')}</span>
                        <a href={`/admin/campanas/editar/${c.id}`} class="bg-gradient-to-r from-gray-700 to-gray-600 hover:from-gray-600 hover:to-gray-500 text-white font-semibold px-4 py-2 rounded-lg transition-all duration-300 inline-flex items-center gap-2">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                          Editar
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            );
          })
        )}
      </div>
    </main>
  </body>
</html>
