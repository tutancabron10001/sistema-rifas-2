        </div>
      </div>
      </div>

      <!-- VISTA 2: RESERVADOS Y PAGOS -->
      <div id="viewReservados" class="hidden space-y-6">
      <!-- Filtros para Reservados -->
      <div class="card bg-gradient-to-br from-gray-900/70 to-black/70 border border-pink-500/30 rounded-3xl p-6 shadow-2xl shadow-pink-500/20">
        <div class="flex flex-wrap gap-2 mb-4">
          <button type="button" id="filterCampaignReserBtn" class="px-4 py-2 bg-pink-600 hover:bg-pink-500 text-white rounded-lg transition-all">
            Campa√±a
          </button>
          <button id="buscarReserBtn" class="ml-auto bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-500 hover:to-rose-500 text-white font-bold py-2 px-6 rounded-lg border border-pink-400/40 transition-all">Buscar</button>
          <button id="limpiarReserBtn" type="button" class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white font-semibold rounded-lg border border-gray-600/60">Limpiar</button>
        </div>
        
        <div id="campaignReserFilter" class="hidden">
          <label class="block text-sm text-pink-200/80 mb-2">Campa√±a</label>
          <select id="campaignReserSelect" class="w-full bg-gray-900/70 border border-pink-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-pink-400">
            <option value="">Todas</option>
            {campaignList.map((c) => (
              <option value={c.id}>{c.name}</option>
            ))}
          </select>
        </div>
        <div id="estadoMsgReser" class="hidden mt-3 text-sm text-pink-200"></div>
      </div>

      <!-- Resultados Reservados y Pagos -->
      <div class="card bg-gradient-to-br from-gray-900/70 to-black/70 border border-pink-500/30 rounded-3xl p-6 shadow-2xl shadow-pink-500/20 min-h-[320px]">
          <!-- Barra de dinero recaudado -->
          <div class="mb-6 p-4 bg-gray-800/50 rounded-xl border border-pink-500/20">
            <h3 class="text-lg font-bold text-pink-100 mb-3">üí∞ Estado Financiero</h3>
            <div class="grid grid-cols-3 gap-3">
              <div class="bg-green-900/30 border border-green-500/30 rounded-lg p-3">
                <div class="text-xs text-green-300 mb-1">üíµ Pagado</div>
                <div class="text-xl font-bold text-green-400" id="dineroRecaudado">$0</div>
              </div>
              <div class="bg-orange-900/30 border border-orange-500/30 rounded-lg p-3">
                <div class="text-xs text-orange-300 mb-1">üí∞ Abonado</div>
                <div class="text-xl font-bold text-orange-400" id="dineroAbonado">$0</div>
              </div>
              <div class="bg-yellow-900/30 border border-yellow-500/30 rounded-lg p-3">
                <div class="text-xs text-yellow-300 mb-1">‚è≥ Pendiente</div>
                <div class="text-xl font-bold text-yellow-400" id="dineroPorRecaudar">$0</div>
              </div>
            </div>
            <div class="mt-3 bg-gray-700 rounded-full h-6 overflow-hidden">
              <div id="barraRecaudacion" class="bg-gradient-to-r from-green-500 to-emerald-500 h-full transition-all duration-500 flex items-center justify-center text-xs font-bold" style="width: 0%; color: #1f2937;">
                <span id="porcentajeRecaudado">0%</span>
              </div>
            </div>
          </div>

          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm text-pink-200/70">Reservaciones</p>
              <h2 class="text-xl font-bold text-pink-50">Registros</h2>
            </div>
            <div class="text-right text-sm text-pink-200/80">
              <div><span class="font-semibold" id="totalReserRows">0</span> registros</div>
              <div><span class="font-semibold text-yellow-400" id="countReservados">0</span> Reservados</div>
              <div><span class="font-semibold text-orange-400" id="countAbonados">0</span> Abonados</div>
              <div><span class="font-semibold text-green-400" id="countPagos">0</span> Pagados</div>
            </div>
          </div>
          <div class="overflow-x-auto rounded-2xl border border-pink-500/20">
            <table class="min-w-full text-sm">
              <thead class="bg-pink-500/10 text-pink-100">
                <tr>
                  <th class="px-3 py-2 text-left">Transacci√≥n</th>
                  <th class="px-3 py-2 text-left">Participante</th>
                  <th class="px-3 py-2 text-left">Correo</th>
                  <th class="px-3 py-2 text-left">N√∫mero</th>
                  <th class="px-3 py-2 text-left">Campa√±a</th>
                  <th class="px-3 py-2 text-left">Estado</th>
                  <th class="px-3 py-2 text-left">Tipo</th>
                  <th class="px-3 py-2 text-left">Precio</th>
                  <th class="px-3 py-2 text-left">Abonado</th>
                  <th class="px-3 py-2 text-left">Fecha</th>
                </tr>
              </thead>
              <tbody id="resultBodyReser" class="divide-y divide-pink-500/10 text-white"></tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <script>
      const form = document.getElementById('consultaForm');
      const buscarBtn = document.getElementById('buscarBtn');
      const limpiarBtn = document.getElementById('limpiarBtn');
      const estadoMsg = document.getElementById('estadoMsg');
      const resultBody = document.getElementById('resultBody');
      const totalMovEl = document.getElementById('totalMov');
      const totalTxEl = document.getElementById('totalTx');
      const eventSelect = document.getElementById('eventSelect');
      const txInput = document.getElementById('txInput');
      const campaignSelect = document.getElementById('campaignSelect');

      // Filtros colapsables
      const filterBtns = {
        cedula: document.getElementById('filterCedulaBtn'),
        campaign: document.getElementById('filterCampaignBtn'),
        tx: document.getElementById('filterTxBtn')
      };
      const filterDivs = {
        cedula: document.getElementById('cedulaFilter'),
        campaign: document.getElementById('campaignFilter'),
        tx: document.getElementById('txFilter')
      };

      Object.keys(filterBtns).forEach(key => {
        filterBtns[key].addEventListener('click', () => {
          const isHidden = filterDivs[key].classList.contains('hidden');
          // Cerrar todos los filtros y restaurar colores
          Object.keys(filterDivs).forEach(k => {
            filterDivs[k].classList.add('hidden');
            filterBtns[k].classList.remove('bg-pink-700');
            filterBtns[k].classList.add('bg-pink-600');
          });
          // Abrir el filtro clickeado si estaba cerrado
          if (isHidden) {
            filterDivs[key].classList.remove('hidden');
            filterBtns[key].classList.remove('bg-pink-600');
            filterBtns[key].classList.add('bg-pink-700');
            
            // LIMPIAR RESULTADOS Y DATOS DE ENTRADA CUANDO CAMBIAS DE FILTRO
            document.getElementById('cedulaInput').value = '';
            campaignSelect.value = '';
            txInput.value = '';
            resultBody.innerHTML = '';
            totalMovEl.textContent = '0';
            totalTxEl.textContent = '0';
            estadoMsg.classList.add('hidden');
            updatePaymentButton();
          }
        });
      });

      form.addEventListener('submit', (e) => e.preventDefault());

      campaignSelect.addEventListener('change', () => {
        filterEventsByCampaign();
      });

      buscarBtn.addEventListener('click', async () => {
        const cedula = document.getElementById('cedulaInput').value.trim();
        const campaignId = campaignSelect.value;
        const txNumber = txInput.value.trim();

        if (!cedula && !campaignId && !txNumber) {
          showMsg('Ingresa c√©dula, campa√±a o transacci√≥n para consultar');
          return;
        }
        try {
          setLoading(true);
          const params = new URLSearchParams({ cedula });
          if (campaignId) params.append('campaignId', campaignId);
          if (txNumber) params.append('transactionNumber', txNumber);
          const resp = await fetch(`/api/consultas-cedula?${params.toString()}`);
          const data = await resp.json();
          if (!resp.ok) {
            showMsg(data.error || 'Error al consultar');
            setLoading(false);
            return;
          }
          renderResults(data.movimientos || []);
          setLoading(false);
        } catch (err) {
          console.error(err);
          showMsg('Error al consultar');
          setLoading(false);
        }
      });

      limpiarBtn.addEventListener('click', () => {
        document.getElementById('cedulaInput').value = '';
        campaignSelect.value = '';
        txInput.value = '';
        resultBody.innerHTML = '';
        totalMovEl.textContent = '0';
        totalTxEl.textContent = '0';
        estadoMsg.classList.add('hidden');
        updatePaymentButton();
      });

      function updatePaymentButton() {
        const paymentChecked = document.querySelectorAll('.payment-checkbox:checked');
        const abonoChecked = document.querySelectorAll('.abono-checkbox:checked');
        const paymentBtn = document.getElementById('paymentBtn');
        const abonoBtn = document.getElementById('abonoBtn');
        
        // Mostrar solo el bot√≥n correspondiente
        if (paymentChecked.length > 0) {
          paymentBtn.classList.remove('hidden');
          paymentBtn.textContent = `Marcar ${paymentChecked.length} como Pago`;
          abonoBtn.classList.add('hidden');
        } else if (abonoChecked.length > 0) {
          abonoBtn.classList.remove('hidden');
          abonoBtn.textContent = `Guardar ${abonoChecked.length} Abono(s)`;
          paymentBtn.classList.add('hidden');
        } else {
          paymentBtn.classList.add('hidden');
          abonoBtn.classList.add('hidden');
        }
      }

      function updateAbonoButton() {
        updatePaymentButton();
      }

      document.getElementById('paymentBtn').addEventListener('click', async () => {
        const checkedBoxes = document.querySelectorAll('.payment-checkbox:checked');
        console.log('Bot√≥n clickeado, checkboxes seleccionados:', checkedBoxes.length);
        
        if (checkedBoxes.length === 0) {
          showMsg('Selecciona al menos un n√∫mero para marcar como pagado');
          return;
        }
        
        // Log detallado de cada checkbox
        Array.from(checkedBoxes).forEach((cb, index) => {
          console.log(`Checkbox ${index}:`, {
            numeroId: cb.dataset.numeroId,
            eventId: cb.dataset.eventId,
            element: cb
          });
        });
        
        const numeros = Array.from(checkedBoxes).map(cb => ({
          numero: cb.dataset.numeroId,
          eventId: cb.dataset.eventId
        }));
        
        console.log('N√∫meros a marcar como pagados:', numeros);
        console.log('JSON que se enviar√°:', JSON.stringify({ numeros }));
        
        try {
          const paymentBtn = document.getElementById('paymentBtn');
          paymentBtn.textContent = 'Procesando...';
          
          const resp = await fetch(`/api/mark-payment-numbers`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ numeros })
          });
          
          console.log('Respuesta del servidor:', resp.status);
          const data = await resp.json();
          console.log('Datos recibidos:', data);
          
          if (!resp.ok) {
            showMsg(data.error || 'Error al marcar como pagado');
            updatePaymentButton();
            return;
          }
          
          showMsg(`‚úÖ ¬°√âxito! ${data.count} n√∫mero(s) marcado(s) como PAGADO. Correo enviado.`);
          
          // Limpiar checkboxes
          checkedBoxes.forEach(cb => cb.checked = false);
          
          // Esperar 2 segundos y refrescar
          setTimeout(() => {
            buscarBtn.click();
          }, 2000);
          
        } catch (err) {
          console.error('Error completo:', err);
          showMsg('Error al marcar como pagado: ' + err.message);
          updatePaymentButton();
        }
      });

      document.getElementById('abonoBtn').addEventListener('click', async () => {
        const checkedBoxes = document.querySelectorAll('.abono-checkbox:checked');
        
        if (checkedBoxes.length === 0) {
          showMsg('Selecciona al menos un n√∫mero para abonar');
          return;
        }
        
        const numeros = [];
        let hasErrors = false;
        
        Array.from(checkedBoxes).forEach(cb => {
          const inputId = cb.getAttribute('data-abono-input');
          const input = document.getElementById(inputId);
          const precio = parseFloat(cb.dataset.precio) || 0;
          const abonadoActual = parseFloat(cb.dataset.abonado) || 0;
          const maxAbono = precio - abonadoActual;
          
          // Parsear el valor limpiando formato de moneda
          const valorLimpio = input.value.replace(/[^\d]/g, '');
          const abono = parseFloat(valorLimpio) || 0;
          
          console.log('Checkbox abono:', {
            numeroId: cb.dataset.numeroId,
            eventId: cb.dataset.eventId,
            inputId: inputId,
            abonoValue: abono,
            precio: precio,
            abonadoActual: abonadoActual,
            maxAbono: maxAbono
          });
          
          if (abono <= 0) {
            showMsg('Todos los abonos deben ser mayores a 0');
            hasErrors = true;
            return;
          }
          
          if (abono >= maxAbono) {
            showMsg(`El abono no puede ser igual o mayor al saldo pendiente (${formatCurrency(maxAbono)}). Use "Marcar como Pago" para pagos completos.`);
            hasErrors = true;
            return;
          }
          
          numeros.push({
            numero: cb.dataset.numeroId,
            eventId: cb.dataset.eventId,
            abono: abono
          });
        });
        
        console.log('N√∫meros a abonar:', numeros);
        
        if (hasErrors || numeros.length === 0) return;
        
        try {
          const abonoBtn = document.getElementById('abonoBtn');
          abonoBtn.textContent = 'Procesando...';
          
          const resp = await fetch(`/api/mark-abono-numbers`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ numeros })
          });
          
          const data = await resp.json();
          
          if (!resp.ok) {
            showMsg(data.error || 'Error al registrar abonos');
            abonoBtn.textContent = 'Guardar Abonos';
            updatePaymentButton();
            return;
          }
          
          showMsg(`‚úÖ ¬°√âxito! ${numeros.length} abono(s) registrado(s). Correo envi√°ndose...`);
          
          // Limpiar checkboxes e inputs inmediatamente
          document.querySelectorAll('.abono-checkbox:checked').forEach(cb => {
            cb.checked = false;
            const inputId = cb.getAttribute('data-abono-input');
            const input = document.getElementById(inputId);
            if (input) {
              input.classList.add('hidden');
              input.value = '';
            }
          });
          
          // Ocultar bot√≥n
          abonoBtn.classList.add('hidden');
          abonoBtn.textContent = 'Guardar Abonos';
          
          // Refrescar la b√∫squeda despu√©s de 1.5 segundos
          setTimeout(async () => {
            // Simular clic en buscar
            const cedula = document.getElementById('cedulaInput').value.trim();
            const campaignId = campaignSelect.value;
            const txNumber = txInput.value.trim();
            
            if (cedula || campaignId || txNumber) {
              setLoading(true);
              const params = new URLSearchParams({ cedula });
              if (campaignId) params.append('campaignId', campaignId);
              if (txNumber) params.append('transactionNumber', txNumber);
              
              try {
                const resp = await fetch(`/api/consultas-cedula?${params.toString()}`);
                const data = await resp.json();
                if (resp.ok) {
                  renderResults(data.movimientos || []);
                }
              } catch (e) {
                console.error('Error al refrescar:', e);
              }
              setLoading(false);
            }
          }, 1500);
          
        } catch (err) {
          console.error('Error completo:', err);
          showMsg('Error al registrar abonos: ' + err.message);
          updatePaymentButton();
        }
      });

      function showMsg(text) {
        estadoMsg.textContent = text;
        estadoMsg.classList.remove('hidden');
      }

      function filterEventsByCampaign() {
        // Funci√≥n ya no necesaria sin evento
      }

      filterEventsByCampaign();

      function setLoading(isLoading) {
        buscarBtn.textContent = isLoading ? 'Buscando...' : 'Buscar';
        buscarBtn.disabled = isLoading;
      }

      function renderResults(rows) {
        resultBody.innerHTML = '';
        if (!rows.length) {
          resultBody.innerHTML = '<tr><td colspan="14" class="px-4 py-3 text-center text-pink-200/70">Sin resultados</td></tr>';
          totalMovEl.textContent = '0';
          totalTxEl.textContent = '0';
          return;
        }

        let txSet = new Set();
        rows.forEach((row, index) => {
          if (row.transactionNumber) txSet.add(row.transactionNumber);
          const tr = document.createElement('tr');
          const abonoInputId = `abono-${index}`;
          const maxAbono = (row.precioSeleccionado || 0) - (row.abonado || 0) - 1;
          tr.innerHTML = `
            <td class="px-3 py-2">
              <input type="checkbox" class="payment-checkbox w-4 h-4 cursor-pointer" data-numero-id="${row.numero}" data-event-id="${row.eventId}" />
            </td>
            <td class="px-3 py-2">
              <div class="flex items-center gap-2">
                <input type="checkbox" class="abono-checkbox w-4 h-4 cursor-pointer" data-numero-id="${row.numero}" data-event-id="${row.eventId}" data-abono-input="${abonoInputId}" data-precio="${row.precioSeleccionado || 0}" data-abonado="${row.abonado || 0}" />
                <input type="text" id="${abonoInputId}" class="abono-input hidden w-32 bg-gray-800 border border-orange-500/30 rounded px-2 py-1 text-sm text-white" placeholder="$ 0" />
              </div>
            </td>
            <td class="px-3 py-2 text-pink-200">${row.transactionNumber || '-'}</td>
            <td class="px-3 py-2">${row.usuarioNombre || '-'}</td>
            <td class="px-3 py-2">${row.usuarioCorreo || '-'}</td>
            <td class="px-3 py-2">${row.usuarioTelefono || '-'}</td>
            <td class="px-3 py-2">${row.numero || '-'}</td>
            <td class="px-3 py-2 text-pink-100/80">${row.campaignName || '-'}</td>
            <td class="px-3 py-2">${row.estado || '-'}</td>
            <td class="px-3 py-2">${row.tipoPrecio === 'promocion' ? 'Promoci√≥n' : 'Normal'}</td>
            <td class="px-3 py-2">${formatCurrency(row.precioSeleccionado)}</td>
            <td class="px-3 py-2 text-orange-400">${formatCurrency(row.abonado || 0)}</td>
            <td class="px-3 py-2 text-pink-200/70">${formatDate(row.fechaTransaccion)}</td>
            <td class="px-3 py-2 text-pink-200/70">${formatDate(row.raffleDate)}</td>
          `;
          resultBody.appendChild(tr);
        });
        
        // Event listeners para checkboxes de pago
        document.querySelectorAll('.payment-checkbox').forEach(checkbox => {
          checkbox.addEventListener('change', function() {
            if (this.checked) {
              // Desmarcar todos los checkboxes de abono
              document.querySelectorAll('.abono-checkbox:checked').forEach(cb => {
                cb.checked = false;
                const inputId = cb.getAttribute('data-abono-input');
                const input = document.getElementById(inputId);
                input.classList.add('hidden');
                input.value = '';
              });
            }
            updatePaymentButton();
          });
        });
        
        // Event listeners para checkboxes de abono
        document.querySelectorAll('.abono-checkbox').forEach(checkbox => {
          checkbox.addEventListener('change', function() {
            const inputId = this.getAttribute('data-abono-input');
            const input = document.getElementById(inputId);
            if (this.checked) {
              // Desmarcar todos los checkboxes de pago
              document.querySelectorAll('.payment-checkbox:checked').forEach(cb => {
                cb.checked = false;
              });
              input.classList.remove('hidden');
              input.value = '';
              input.focus();
            } else {
              input.classList.add('hidden');
              input.value = '';
            }
            updatePaymentButton();
          });
        });
        
        // Event listeners para inputs de abono - formatear como pesos colombianos
        document.querySelectorAll('.abono-input').forEach(input => {
          input.addEventListener('input', function(e) {
            // Limpiar todo excepto n√∫meros
            let valor = this.value.replace(/[^\d]/g, '');
            if (valor) {
              // Formatear como moneda colombiana
              const numero = parseInt(valor);
              this.value = '$ ' + numero.toLocaleString('es-CO');
            }
            updatePaymentButton();
          });
          
          input.addEventListener('focus', function() {
            // Al enfocar, mostrar solo el n√∫mero limpio para editar
            let valor = this.value.replace(/[^\d]/g, '');
            this.value = valor;
          });
          
          input.addEventListener('blur', function() {
            // Al desenfocar, formatear nuevamente
            let valor = this.value.replace(/[^\d]/g, '');
            if (valor) {
              const numero = parseInt(valor);
              this.value = '$ ' + numero.toLocaleString('es-CO');
            } else {
              this.value = '';
            }
          });
        });
        
        updatePaymentButton();
        totalMovEl.textContent = rows.length;
        totalTxEl.textContent = txSet.size;
      }

      function formatCurrency(val) {
        if (val === null || val === undefined || isNaN(val)) return '-';
        return Number(val).toLocaleString('es-CO', { style: 'currency', currency: 'COP', minimumFractionDigits: 0 });
      }

      function formatDate(val) {
        if (!val) return '-';
        try {
          return new Date(val).toLocaleString('es-CO', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        } catch {
          return val;
        }
      }

      // ========== TABS LOGIC ==========
      document.getElementById('tabAsignaciones').addEventListener('click', () => {
        document.getElementById('viewAsignaciones').classList.remove('hidden');
        document.getElementById('viewReservados').classList.add('hidden');
        document.getElementById('tabAsignaciones').classList.remove('bg-gray-700', 'hover:bg-gray-600');
        document.getElementById('tabAsignaciones').classList.add('bg-pink-600', 'hover:bg-pink-500');
        document.getElementById('tabReservados').classList.remove('bg-pink-600', 'hover:bg-pink-500');
        document.getElementById('tabReservados').classList.add('bg-gray-700', 'hover:bg-gray-600');
      });

      document.getElementById('tabReservados').addEventListener('click', () => {
        document.getElementById('viewAsignaciones').classList.add('hidden');
        document.getElementById('viewReservados').classList.remove('hidden');
        document.getElementById('tabReservados').classList.remove('bg-gray-700', 'hover:bg-gray-600');
        document.getElementById('tabReservados').classList.add('bg-pink-600', 'hover:bg-pink-500');
        document.getElementById('tabAsignaciones').classList.remove('bg-pink-600', 'hover:bg-pink-500');
        document.getElementById('tabAsignaciones').classList.add('bg-gray-700', 'hover:bg-gray-600');
      });

      // ========== VISTA 2: RESERVADOS Y PAGOS ==========
      const campaignReserSelect = document.getElementById('campaignReserSelect');
      const resultBodyReser = document.getElementById('resultBodyReser');
      const countReservados = document.getElementById('countReservados');
      const countPagos = document.getElementById('countPagos');
      const totalReserRows = document.getElementById('totalReserRows');
      const estadoMsgReser = document.getElementById('estadoMsgReser');
      const filterCampaignReserBtn = document.getElementById('filterCampaignReserBtn');
      const campaignReserFilter = document.getElementById('campaignReserFilter');
      const buscarReserBtn = document.getElementById('buscarReserBtn');
      const limpiarReserBtn = document.getElementById('limpiarReserBtn');

      filterCampaignReserBtn.addEventListener('click', () => {
        const isHidden = campaignReserFilter.classList.contains('hidden');
        campaignReserFilter.classList.toggle('hidden');
        if (isHidden) {
          filterCampaignReserBtn.classList.remove('bg-pink-600');
          filterCampaignReserBtn.classList.add('bg-pink-700');
          // Limpiar resultados
          resultBodyReser.innerHTML = '';
          countReservados.textContent = '0';
          document.getElementById('countAbonados').textContent = '0';
          countPagos.textContent = '0';
          totalReserRows.textContent = '0';
          document.getElementById('dineroRecaudado').textContent = '$0';
          document.getElementById('dineroAbonado').textContent = '$0';
          document.getElementById('dineroPorRecaudar').textContent = '$0';
          document.getElementById('barraRecaudacion').style.width = '0%';
          document.getElementById('porcentajeRecaudado').textContent = '0%';
          estadoMsgReser.classList.add('hidden');
        } else {
          filterCampaignReserBtn.classList.remove('bg-pink-700');
          filterCampaignReserBtn.classList.add('bg-pink-600');
        }
      });

      buscarReserBtn.addEventListener('click', async () => {
        const campaignId = campaignReserSelect.value;

        if (!campaignId) {
          showMsgReser('Selecciona una campa√±a para consultar');
          return;
        }
        try {
          buscarReserBtn.disabled = true;
          buscarReserBtn.textContent = 'Buscando...';
          
          const resp = await fetch(`/api/reservados-pagos?campaignId=${campaignId}`);
          const data = await resp.json();
          if (!resp.ok) {
            showMsgReser(data.error || 'Error al consultar');
            buscarReserBtn.disabled = false;
            buscarReserBtn.textContent = 'Buscar';
            return;
          }
          renderResultsReser(data.movimientos || []);
          buscarReserBtn.disabled = false;
          buscarReserBtn.textContent = 'Buscar';
        } catch (err) {
          console.error(err);
          showMsgReser('Error al consultar');
          buscarReserBtn.disabled = false;
          buscarReserBtn.textContent = 'Buscar';
        }
      });

      limpiarReserBtn.addEventListener('click', () => {
        campaignReserSelect.value = '';
        resultBodyReser.innerHTML = '';
        countReservados.textContent = '0';
        document.getElementById('countAbonados').textContent = '0';
        countPagos.textContent = '0';
        totalReserRows.textContent = '0';
        document.getElementById('dineroRecaudado').textContent = '$0';
        document.getElementById('dineroAbonado').textContent = '$0';
        document.getElementById('dineroPorRecaudar').textContent = '$0';
        document.getElementById('barraRecaudacion').style.width = '0%';
        document.getElementById('porcentajeRecaudado').textContent = '0%';
        estadoMsgReser.classList.add('hidden');
      });

      function showMsgReser(text) {
        estadoMsgReser.textContent = text;
        estadoMsgReser.classList.remove('hidden');
      }

      function renderResultsReser(rows) {
        resultBodyReser.innerHTML = '';
        if (!rows.length) {
          resultBodyReser.innerHTML = '<tr><td colspan="9" class="px-4 py-3 text-center text-pink-200/70">Sin resultados</td></tr>';
          countReservados.textContent = '0';
          document.getElementById('countAbonados').textContent = '0';
          countPagos.textContent = '0';
          totalReserRows.textContent = '0';
          document.getElementById('dineroRecaudado').textContent = '$0';
          document.getElementById('dineroAbonado').textContent = '$0';
          document.getElementById('dineroPorRecaudar').textContent = '$0';
          document.getElementById('barraRecaudacion').style.width = '0%';
          document.getElementById('porcentajeRecaudado').textContent = '0%';
          return;
        }

        let reservadosCount = 0, abonadosCount = 0, pagosCount = 0;
        let dineroRecaudado = 0, dineroAbonado = 0, dineroPorRecaudar = 0;
        
        rows.forEach((row) => {
          if (row.estado === 'reservado') {
            reservadosCount++;
            dineroPorRecaudar += row.precioSeleccionado || 0;
          }
          if (row.estado === 'abonada') {
            abonadosCount++;
            dineroAbonado += row.abonado || 0;
            dineroPorRecaudar += (row.precioSeleccionado || 0) - (row.abonado || 0);
          }
          if (row.estado === 'pago') {
            pagosCount++;
            dineroRecaudado += row.precioSeleccionado || 0;
          }
          
          const tr = document.createElement('tr');
          let estadoColor = 'text-yellow-400';
          if (row.estado === 'pago') estadoColor = 'text-green-400';
          if (row.estado === 'abonada') estadoColor = 'text-orange-400';
          
          tr.innerHTML = `
            <td class="px-3 py-2 text-pink-200">${row.transactionNumber || '-'}</td>
            <td class="px-3 py-2">${row.usuarioNombre || '-'}</td>
            <td class="px-3 py-2">${row.usuarioCorreo || '-'}</td>
            <td class="px-3 py-2">${row.numero || '-'}</td>
            <td class="px-3 py-2 text-pink-100/80">${row.eventName || '-'}</td>
            <td class="px-3 py-2 ${estadoColor}">${row.estado || '-'}</td>
            <td class="px-3 py-2">${row.tipoPrecio === 'promocion' ? 'Promoci√≥n' : 'Normal'}</td>
            <td class="px-3 py-2">${formatCurrency(row.precioSeleccionado)}</td>
            <td class="px-3 py-2 text-orange-400">${formatCurrency(row.abonado || 0)}</td>
            <td class="px-3 py-2 text-pink-200/70">${formatDate(row.createdAt)}</td>
          `;
          resultBodyReser.appendChild(tr);
        });

        countReservados.textContent = reservadosCount;
        document.getElementById('countAbonados').textContent = abonadosCount;
        countPagos.textContent = pagosCount;
        totalReserRows.textContent = rows.length;
        
        // Actualizar barra de dinero
        document.getElementById('dineroRecaudado').textContent = formatCurrency(dineroRecaudado);
        document.getElementById('dineroAbonado').textContent = formatCurrency(dineroAbonado);
        document.getElementById('dineroPorRecaudar').textContent = formatCurrency(dineroPorRecaudar);
        
        const totalDinero = dineroRecaudado + dineroAbonado + dineroPorRecaudar;
        const porcentaje = totalDinero > 0 ? Math.round((dineroRecaudado / totalDinero) * 100) : 0;
        
        document.getElementById('barraRecaudacion').style.width = porcentaje + '%';
        document.getElementById('porcentajeRecaudado').textContent = porcentaje + '%';
      }
    </script>
  </body>
</html>
