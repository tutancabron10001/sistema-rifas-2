        if (!expiresAt) return;
        const expMs = Date.parse(expiresAt);
        if (!Number.isFinite(expMs)) return;
        const remaining = expMs - Date.now();
        el.textContent = remaining > 0
          ? `${prefix}${formatRemaining(remaining)}`
          : 'Tiempo agotado';
      }

