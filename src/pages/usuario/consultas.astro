---
import "../../styles/global.css";
import { db } from '../../db/client';
import { campaigns, events } from '../../db/schema';

const campaignList = await db.select().from(campaigns).orderBy(campaigns.createdAt);
const eventList = await db.select().from(events).orderBy(events.createdAt);
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Consultas — Sistema de Rifas</title>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .card { animation: fadeIn 0.35s ease-out; }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-950 via-pink-950 to-black text-white">
    <header class="absolute top-0 left-0 right-0 z-10 p-6">
      <div class="flex items-center justify-between w-full max-w-7xl mx-auto px-2 md:px-4">
        <a href="/usuario" class="group flex items-center gap-2 text-pink-200 hover:text-pink-100 transition-all duration-300">
          <svg class="w-6 h-6 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="font-medium">Volver</span>
        </a>
        <div class="text-center">
          <h1 class="text-2xl md:text-3xl font-bold bg-gradient-to-r from-pink-300 via-rose-300 to-pink-400 bg-clip-text text-transparent">
            Consultas por Cédula
          </h1>
          <p class="text-sm text-pink-200/70 mt-1">Movimientos y transacciones de rifas</p>
        </div>
        <div class="w-24"></div>
      </div>
    </header>

    <main class="w-full max-w-none mx-auto pt-28 pb-16 px-4 md:px-8">
      <div class="grid md:grid-cols-[1.1fr_2fr] gap-6">
      <!-- Filtros colapsables -->
      <div class="card bg-gradient-to-br from-gray-900/70 to-black/70 border border-pink-500/30 rounded-3xl p-6 shadow-2xl shadow-pink-500/20">
        <div class="flex flex-wrap gap-2 mb-4">
          <button type="button" id="filterCedulaBtn" class="px-4 py-2 bg-pink-600 hover:bg-pink-500 text-white rounded-lg transition-all flex items-center gap-2">
            Cédula
          </button>
          <button type="button" id="filterCampaignBtn" class="px-4 py-2 bg-pink-600 hover:bg-pink-500 text-white rounded-lg transition-all flex items-center gap-2">
            Campaña
          </button>
          <button type="button" id="filterEventBtn" class="px-4 py-2 bg-pink-600 hover:bg-pink-500 text-white rounded-lg transition-all flex items-center gap-2">
            Evento
          </button>
          <button id="buscarBtn" class="ml-auto bg-gradient-to-r from-pink-600 to-rose-600 hover:from-pink-500 hover:to-rose-500 text-white font-bold py-2 px-6 rounded-lg border border-pink-400/40 transition-all">Buscar</button>
          <button id="limpiarBtn" type="button" class="px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white font-semibold rounded-lg border border-gray-600/60">Limpiar</button>
        </div>
        
        <!-- Campos colapsables -->
        <form id="consultaForm" class="space-y-3" onsubmit="return false;">
          <div id="cedulaFilter" class="hidden">
            <label class="block text-sm text-pink-200/80 mb-2">Cédula *</label>
            <input id="cedulaInput" type="text" class="w-full bg-gray-900/70 border border-pink-500/30 rounded-lg px-4 py-3 text-white placeholder-gray-500 focus:outline-none focus:border-pink-400" placeholder="Ingresa la cédula" />
          </div>
          <div id="campaignFilter" class="hidden">
            <label class="block text-sm text-pink-200/80 mb-2">Campaña</label>
            <select id="campaignSelect" class="w-full bg-gray-900/70 border border-pink-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-pink-400">
              <option value="">Todas</option>
              {campaignList.map((c) => (
                <option value={c.id}>{c.name}</option>
              ))}
            </select>
          </div>
          <div id="eventFilter" class="hidden">
            <label class="block text-sm text-pink-200/80 mb-2">Evento (nombre)</label>
            <select id="eventSelect" class="w-full bg-gray-900/70 border border-pink-500/30 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-pink-400">
              <option value="">Todos</option>
              {eventList.map((e) => (
                <option value={e.name} data-campaign={e.campaignId}>{e.name}</option>
              ))}
            </select>
          </div>
        </form>
        <div id="estadoMsg" class="hidden mt-3 text-sm text-pink-200"></div>
      </div>

        <!-- Resultados -->
        <div class="card bg-gradient-to-br from-gray-900/70 to-black/70 border border-pink-500/30 rounded-3xl p-6 shadow-2xl shadow-pink-500/20 min-h-[320px]">
          <div class="flex items-center justify-between mb-4">
            <div>
              <p class="text-sm text-pink-200/70">Resultados</p>
              <h2 class="text-xl font-bold text-pink-50">Movimientos</h2>
            </div>
            <div class="text-right text-sm text-pink-200/80">
              <div><span class="font-semibold" id="totalMov">0</span> líneas</div>
              <div><span class="font-semibold" id="totalTx">0</span> transacciones</div>
            </div>
          </div>
          <div class="overflow-x-auto rounded-2xl border border-pink-500/20">
            <table class="min-w-full text-sm">
              <thead class="bg-pink-500/10 text-pink-100">
                <tr>
                  <th class="px-3 py-2 text-left">Transacción</th>
                  <th class="px-3 py-2 text-left">Participante</th>
                  <th class="px-3 py-2 text-left">Correo</th>
                  <th class="px-3 py-2 text-left">Teléfono</th>
                  <th class="px-3 py-2 text-left">Número</th>
                  <th class="px-3 py-2 text-left">Campaña</th>
                  <th class="px-3 py-2 text-left">Estado</th>
                  <th class="px-3 py-2 text-left">Tipo</th>
                  <th class="px-3 py-2 text-left">Precio</th>
                  <th class="px-3 py-2 text-left">F. Reserva</th>
                  <th class="px-3 py-2 text-left">F. Sorteo</th>
                </tr>
              </thead>
              <tbody id="resultBody" class="divide-y divide-pink-500/10 text-white"></tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <script>
      const form = document.getElementById('consultaForm');
      const buscarBtn = document.getElementById('buscarBtn');
      const limpiarBtn = document.getElementById('limpiarBtn');
      const estadoMsg = document.getElementById('estadoMsg');
      const resultBody = document.getElementById('resultBody');
      const totalMovEl = document.getElementById('totalMov');
      const totalTxEl = document.getElementById('totalTx');
      const eventSelect = document.getElementById('eventSelect');
      const campaignSelect = document.getElementById('campaignSelect');

      // Filtros colapsables
      const filterBtns = {
        cedula: document.getElementById('filterCedulaBtn'),
        campaign: document.getElementById('filterCampaignBtn'),
        event: document.getElementById('filterEventBtn')
      };
      const filterDivs = {
        cedula: document.getElementById('cedulaFilter'),
        campaign: document.getElementById('campaignFilter'),
        event: document.getElementById('eventFilter')
      };

      Object.keys(filterBtns).forEach(key => {
        filterBtns[key].addEventListener('click', () => {
          const isHidden = filterDivs[key].classList.contains('hidden');
          // Cerrar todos los filtros y restaurar colores
          Object.keys(filterDivs).forEach(k => {
            filterDivs[k].classList.add('hidden');
            filterBtns[k].classList.remove('bg-pink-700');
            filterBtns[k].classList.add('bg-pink-600');
          });
          // Abrir el filtro clickeado si estaba cerrado
          if (isHidden) {
            filterDivs[key].classList.remove('hidden');
            filterBtns[key].classList.remove('bg-pink-600');
            filterBtns[key].classList.add('bg-pink-700');
          }
        });
      });

      form.addEventListener('submit', (e) => e.preventDefault());

      campaignSelect.addEventListener('change', () => {
        filterEventsByCampaign();
      });

      buscarBtn.addEventListener('click', async () => {
        const cedula = document.getElementById('cedulaInput').value.trim();
        const campaignId = campaignSelect.value;
        const eventName = eventSelect.value;
        if (!cedula) {
          showMsg('Ingresa la cédula para consultar');
          return;
        }
        try {
          setLoading(true);
          const params = new URLSearchParams({ cedula });
          if (campaignId) params.append('campaignId', campaignId);
          if (eventName) params.append('eventName', eventName);
          const resp = await fetch(`/api/consultas-cedula?${params.toString()}`);
          const data = await resp.json();
          if (!resp.ok) {
            showMsg(data.error || 'Error al consultar');
            setLoading(false);
            return;
          }
          renderResults(data.movimientos || []);
          setLoading(false);
        } catch (err) {
          console.error(err);
          showMsg('Error al consultar');
          setLoading(false);
        }
      });

      limpiarBtn.addEventListener('click', () => {
        document.getElementById('cedulaInput').value = '';
        campaignSelect.value = '';
        eventSelect.value = '';
        filterEventsByCampaign();
        resultBody.innerHTML = '';
        totalMovEl.textContent = '0';
        totalTxEl.textContent = '0';
        estadoMsg.classList.add('hidden');
      });

      function showMsg(text) {
        estadoMsg.textContent = text;
        estadoMsg.classList.remove('hidden');
      }

      function filterEventsByCampaign() {
        const selectedCampaign = campaignSelect.value;
        const options = Array.from(eventSelect.options);
        options.forEach((opt) => {
          if (!opt.dataset.campaign) return; // skip "Todos"
          const matches = !selectedCampaign || opt.dataset.campaign === selectedCampaign;
          opt.hidden = !matches;
        });
        if (eventSelect.selectedOptions[0]?.hidden) {
          eventSelect.value = '';
        }
      }

      filterEventsByCampaign();

      function setLoading(isLoading) {
        buscarBtn.textContent = isLoading ? 'Buscando...' : 'Buscar';
        buscarBtn.disabled = isLoading;
      }

      function renderResults(rows) {
        resultBody.innerHTML = '';
        if (!rows.length) {
          resultBody.innerHTML = '<tr><td colspan="11" class="px-4 py-3 text-center text-pink-200/70">Sin resultados</td></tr>';
          totalMovEl.textContent = '0';
          totalTxEl.textContent = '0';
          return;
        }

        let txSet = new Set();
        rows.forEach((row) => {
          if (row.transactionNumber) txSet.add(row.transactionNumber);
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td class="px-3 py-2 text-pink-200">${row.transactionNumber || '-'}</td>
            <td class="px-3 py-2">${row.usuarioNombre || '-'}</td>
            <td class="px-3 py-2">${row.usuarioCorreo || '-'}</td>
            <td class="px-3 py-2">${row.usuarioTelefono || '-'}</td>
            <td class="px-3 py-2">${row.numero || '-'}</td>
            <td class="px-3 py-2 text-pink-100/80">${row.campaignName || '-'}</td>
            <td class="px-3 py-2">${row.estado || '-'}</td>
            <td class="px-3 py-2">${row.tipoPrecio === 'promocion' ? 'Promoción' : 'Normal'}</td>
            <td class="px-3 py-2">${formatCurrency(row.precioSeleccionado)}</td>
            <td class="px-3 py-2 text-pink-200/70">${formatDate(row.fechaTransaccion)}</td>
            <td class="px-3 py-2 text-pink-200/70">${formatDate(row.raffleDate)}</td>
          `;
          resultBody.appendChild(tr);
        });
        totalMovEl.textContent = rows.length;
        totalTxEl.textContent = txSet.size;
      }

      function formatCurrency(val) {
        if (val === null || val === undefined || isNaN(val)) return '-';
        return Number(val).toLocaleString('es-CO', { style: 'currency', currency: 'COP', minimumFractionDigits: 0 });
      }

      function formatDate(val) {
        if (!val) return '-';
        try {
          return new Date(val).toLocaleString('es-CO', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        } catch {
          return val;
        }
      }
    </script>
  </body>
</html>
