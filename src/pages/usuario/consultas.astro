---
import "../../styles/global.css";
import { db } from '../../db/client';
import { campaigns, events } from '../../db/schema';

const campaignList = await db.select().from(campaigns).orderBy(campaigns.createdAt);
const eventList = await db.select().from(events).orderBy(events.createdAt);
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Consultas ‚Äî Sistema de Rifas</title>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(12px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .card { animation: fadeIn 0.35s ease-out; }
      
      /* Mobile responsive */
      @media (max-width: 768px) {
        table {
          min-width: 500px;
          font-size: 0.75rem;
        }
        th, td {
          padding: 0.5rem 0.5rem;
        }
      }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-rose-50 via-sky-50 to-white text-slate-900">
    <header class="absolute top-0 left-0 right-0 z-10 p-6">
      <div class="flex items-center justify-between w-full max-w-7xl mx-auto px-2 md:px-4">
        <a href="/usuario" class="group flex items-center gap-2 text-slate-700 hover:text-slate-900 transition-all duration-300">
          <svg class="w-6 h-6 group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span class="font-medium">Volver</span>
        </a>
        <div class="text-center">
          <h1 class="text-3xl md:text-4xl font-black bg-gradient-to-r from-rose-700 via-fuchsia-700 to-sky-700 bg-clip-text text-transparent">
            Consultas por C√©dula
          </h1>
          <p class="text-base text-slate-700 mt-1">Movimientos y transacciones de rifas</p>
        </div>
        <div class="w-24"></div>
      </div>
    </header>

    <main class="w-full max-w-none mx-auto pt-28 pb-16 px-4 md:px-8">
      <div class="grid grid-cols-1 md:grid-cols-[1.1fr_2fr] gap-6">
      <!-- Filtros colapsables -->
      <div class="card bg-white/80 border border-slate-200/80 rounded-3xl p-4 md:p-6 shadow-xl shadow-slate-200/60">
        <div class="flex flex-col md:flex-row md:flex-wrap gap-2 mb-4">
          <button type="button" id="filterCedulaBtn" class="w-full md:w-auto px-4 py-2 bg-gradient-to-r from-sky-600 to-indigo-600 hover:from-sky-500 hover:to-indigo-500 text-white rounded-xl transition-all flex items-center gap-2 justify-center md:justify-start font-bold shadow-sm">
            C√©dula
          </button>
          <button type="button" id="filterCampaignBtn" class="w-full md:w-auto px-4 py-2 bg-gradient-to-r from-sky-600 to-indigo-600 hover:from-sky-500 hover:to-indigo-500 text-white rounded-xl transition-all flex items-center gap-2 justify-center md:justify-start font-bold shadow-sm">
            Campa√±a
          </button>
          <button type="button" id="filterEventBtn" class="w-full md:w-auto px-4 py-2 bg-gradient-to-r from-sky-600 to-indigo-600 hover:from-sky-500 hover:to-indigo-500 text-white rounded-xl transition-all flex items-center gap-2 justify-center md:justify-start font-bold shadow-sm">
            Evento
          </button>
          <button id="buscarBtn" class="w-full md:ml-auto md:w-auto bg-gradient-to-r from-rose-600 to-fuchsia-600 hover:from-rose-500 hover:to-fuchsia-500 text-white font-extrabold py-2 px-6 rounded-xl border border-rose-200/40 transition-all shadow-sm">Buscar</button>
          <button id="limpiarBtn" type="button" class="w-full md:w-auto px-4 py-2 bg-white hover:bg-slate-50 text-slate-900 font-bold rounded-xl border border-slate-200">Limpiar</button>
        </div>
        
        <!-- Campos colapsables -->
        <form id="consultaForm" class="space-y-3" onsubmit="return false;">
          <div id="cedulaFilter" class="hidden">
            <label class="block text-sm text-slate-700 mb-2 font-semibold">C√©dula *</label>
            <input id="cedulaInput" type="text" class="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 text-slate-900 placeholder-slate-400 focus:outline-none focus:border-sky-300 focus:ring-4 focus:ring-sky-200/50" placeholder="Ingresa la c√©dula" />
          </div>
          <div id="campaignFilter" class="hidden">
            <label class="block text-sm text-slate-700 mb-2 font-semibold">Campa√±a</label>
            <select id="campaignSelect" class="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 text-slate-900 focus:outline-none focus:border-sky-300 focus:ring-4 focus:ring-sky-200/50">
              <option value="">Todas</option>
              {campaignList.map((c) => (
                <option value={c.id}>{c.name}</option>
              ))}
            </select>
          </div>
          <div id="eventFilter" class="hidden">
            <label class="block text-sm text-slate-700 mb-2 font-semibold">Evento (nombre)</label>
            <select id="eventSelect" class="w-full bg-white border border-slate-200 rounded-xl px-4 py-3 text-slate-900 focus:outline-none focus:border-sky-300 focus:ring-4 focus:ring-sky-200/50">
              <option value="">Todos</option>
              {eventList.map((e) => (
                <option value={e.name} data-campaign={e.campaignId}>{e.name}</option>
              ))}
            </select>
          </div>
        </form>
        <div id="estadoMsg" class="hidden mt-3 text-sm text-slate-700"></div>
      </div>

        <!-- Resultados -->
        <div class="card bg-white/80 border border-slate-200/80 rounded-3xl p-4 md:p-6 shadow-xl shadow-slate-200/60 min-h-[320px]">
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4">
            <div>
              <p class="text-sm text-slate-600">Resultados</p>
              <h2 class="text-xl font-extrabold text-slate-900">Movimientos</h2>
            </div>
            <div class="text-right text-sm text-slate-600 mt-3 md:mt-0">
              <div><span class="font-semibold" id="totalMov">0</span> l√≠neas</div>
              <div><span class="font-semibold" id="totalTx">0</span> transacciones</div>
            </div>
          </div>
          <div class="overflow-x-auto rounded-2xl border border-slate-200">
            <table class="min-w-full text-sm">
              <thead class="bg-slate-50 text-slate-700">
                <tr>
                  <th class="px-3 py-2 text-left">Transacci√≥n</th>
                  <th class="px-3 py-2 text-left">Comprobante</th>
                  <th class="px-3 py-2 text-left">Participante</th>
                  <th class="px-3 py-2 text-left">Correo</th>
                  <th class="px-3 py-2 text-left">Tel√©fono</th>
                  <th class="px-3 py-2 text-left">N√∫mero</th>
                  <th class="px-3 py-2 text-left">Campa√±a</th>
                  <th class="px-3 py-2 text-left">Estado</th>
                  <th class="px-3 py-2 text-left">Tipo</th>
                  <th class="px-3 py-2 text-left">Precio</th>
                  <th class="px-3 py-2 text-left">F. Reserva</th>
                  <th class="px-3 py-2 text-left">F. Sorteo</th>
                </tr>
              </thead>
              <tbody id="resultBody" class="divide-y divide-slate-100 text-slate-800"></tbody>
            </table>
          </div>
        </div>
      </div>
    </main>

    <!-- Proof History Modal -->
    <div id="proofHistoryModal" class="hidden fixed inset-0 app-overlay z-50 flex items-center justify-center p-3 md:p-6">
      <div class="app-modal max-w-5xl w-full max-h-[92vh] overflow-y-auto">
        <div class="sticky top-0 bg-sky-50 px-4 md:px-8 py-3 md:py-4 flex items-center justify-between border-b border-sky-200">
          <div>
            <h2 class="text-lg md:text-2xl font-black text-slate-900">Hist√≥rico de comprobantes</h2>
            <p id="proofHistoryTitle" class="text-slate-600 text-xs md:text-sm mt-1"></p>
          </div>
          <button id="proofHistoryCloseBtn" class="text-slate-600 hover:text-slate-900 text-xl md:text-2xl font-bold transition-colors">‚úï</button>
        </div>
        <div class="px-4 md:px-8 py-4 md:py-6">
          <div id="proofHistoryGrid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3"></div>
          <div id="proofHistoryEmpty" class="hidden text-center text-slate-600 py-10">Sin comprobantes</div>
        </div>
      </div>
    </div>

    <script>
      let proofsByTx = {};

      function openProofHistory(transactionNumber) {
        const modal = document.getElementById('proofHistoryModal');
        const title = document.getElementById('proofHistoryTitle');
        const grid = document.getElementById('proofHistoryGrid');
        const empty = document.getElementById('proofHistoryEmpty');
        if (!modal || !grid || !empty) return;

        const proofs = (proofsByTx && transactionNumber && proofsByTx[transactionNumber]) ? proofsByTx[transactionNumber] : [];
        grid.innerHTML = '';
        if (title) title.textContent = transactionNumber ? `Transacci√≥n #${transactionNumber}` : '';

        if (!Array.isArray(proofs) || proofs.length === 0) {
          empty.classList.remove('hidden');
        } else {
          empty.classList.add('hidden');
          proofs.forEach((p) => {
            const card = document.createElement('a');
            card.href = p.url;
            card.target = '_blank';
            card.rel = 'noopener noreferrer';
            card.className = 'block bg-white/90 border border-slate-200 rounded-xl overflow-hidden hover:bg-white transition';

            const img = document.createElement('img');
            img.src = p.url;
            img.alt = 'Comprobante';
            img.className = 'w-full h-28 object-cover';

            const meta = document.createElement('div');
            meta.className = 'p-2 text-xs text-slate-800 space-y-1';
            const kind = String(p.kind || '').toUpperCase();
            const amt = p.amount != null ? ` ‚Ä¢ ${formatCurrency(p.amount)}` : '';
            meta.innerHTML = `
              <div class="font-bold">${kind}${amt}</div>
              <div class="text-slate-600">${formatDate(p.createdAt)}</div>
            `;

            card.appendChild(img);
            card.appendChild(meta);
            grid.appendChild(card);
          });
        }

        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }

      function closeProofHistory() {
        const modal = document.getElementById('proofHistoryModal');
        if (modal) modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
      }
      const form = document.getElementById('consultaForm');
      const buscarBtn = document.getElementById('buscarBtn');
      const limpiarBtn = document.getElementById('limpiarBtn');
      const estadoMsg = document.getElementById('estadoMsg');
      const resultBody = document.getElementById('resultBody');
      const totalMovEl = document.getElementById('totalMov');
      const totalTxEl = document.getElementById('totalTx');
      const eventSelect = document.getElementById('eventSelect');
      const campaignSelect = document.getElementById('campaignSelect');

      // Filtros colapsables
      const filterBtns = {
        cedula: document.getElementById('filterCedulaBtn'),
        campaign: document.getElementById('filterCampaignBtn'),
        event: document.getElementById('filterEventBtn')
      };
      const filterDivs = {
        cedula: document.getElementById('cedulaFilter'),
        campaign: document.getElementById('campaignFilter'),
        event: document.getElementById('eventFilter')
      };

      Object.keys(filterBtns).forEach(key => {
        filterBtns[key].addEventListener('click', () => {
          const isHidden = filterDivs[key].classList.contains('hidden');
          // Cerrar todos los filtros y restaurar colores
          Object.keys(filterDivs).forEach(k => {
            filterDivs[k].classList.add('hidden');
            filterBtns[k].classList.remove('bg-blue-700');
            filterBtns[k].classList.add('bg-blue-600');
          });
          // Abrir el filtro clickeado si estaba cerrado
          if (isHidden) {
            filterDivs[key].classList.remove('hidden');
            filterBtns[key].classList.remove('bg-blue-600');
            filterBtns[key].classList.add('bg-blue-700');
          }
        });
      });

      form.addEventListener('submit', (e) => e.preventDefault());

      campaignSelect.addEventListener('change', () => {
        filterEventsByCampaign();
      });

      buscarBtn.addEventListener('click', async () => {
        const cedula = document.getElementById('cedulaInput').value.trim();
        const campaignId = campaignSelect.value;
        const eventName = eventSelect.value;
        if (!cedula) {
          showMsg('Ingresa la c√©dula para consultar');
          return;
        }
        try {
          setLoading(true);
          const params = new URLSearchParams({ cedula });
          if (campaignId) params.append('campaignId', campaignId);
          if (eventName) params.append('eventName', eventName);
          const resp = await fetch(`/api/consultas-cedula?${params.toString()}`);
          const data = await resp.json();
          if (!resp.ok) {
            showMsg(data.error || 'Error al consultar');
            setLoading(false);
            return;
          }
          renderResults(data.movimientos || []);
          setLoading(false);
        } catch (err) {
          console.error(err);
          showMsg('Error al consultar');
          setLoading(false);
        }
      });

      limpiarBtn.addEventListener('click', () => {
        document.getElementById('cedulaInput').value = '';
        campaignSelect.value = '';
        eventSelect.value = '';
        filterEventsByCampaign();
        resultBody.innerHTML = '';
        totalMovEl.textContent = '0';
        totalTxEl.textContent = '0';
        estadoMsg.classList.add('hidden');
      });

      function showMsg(text) {
        estadoMsg.textContent = text;
        estadoMsg.classList.remove('hidden');
      }

      function filterEventsByCampaign() {
        const selectedCampaign = campaignSelect.value;
        const options = Array.from(eventSelect.options);
        options.forEach((opt) => {
          if (!opt.dataset.campaign) return; // skip "Todos"
          const matches = !selectedCampaign || opt.dataset.campaign === selectedCampaign;
          opt.hidden = !matches;
        });
        if (eventSelect.selectedOptions[0]?.hidden) {
          eventSelect.value = '';
        }
      }

      filterEventsByCampaign();

      function setLoading(isLoading) {
        buscarBtn.textContent = isLoading ? 'Buscando...' : 'Buscar';
        buscarBtn.disabled = isLoading;
      }

      function renderResults(rows) {
        resultBody.innerHTML = '';
        proofsByTx = {};
        if (!rows.length) {
          resultBody.innerHTML = '<tr><td colspan="12" class="px-4 py-3 text-center text-blue-200/70">Sin resultados</td></tr>';
          totalMovEl.textContent = '0';
          totalTxEl.textContent = '0';
          return;
        }

        let txSet = new Set();
        rows.forEach((row) => {
          if (row.transactionNumber) txSet.add(row.transactionNumber);
          const txNum = row.transactionNumber || '';
          if (txNum && proofsByTx[txNum] == null) {
            proofsByTx[txNum] = Array.isArray(row.proofs) ? row.proofs : [];
          }
          const proofCount = txNum && Array.isArray(proofsByTx[txNum]) ? proofsByTx[txNum].length : 0;
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td class="px-3 py-2 text-blue-200">${row.transactionNumber || '-'}</td>
            <td class="px-3 py-2">
              ${proofCount > 0 ? `
                <button type="button" class="proof-history-btn inline-flex items-center justify-center px-3 h-9 rounded-lg border border-blue-500/30 bg-black/30 hover:bg-black/50 transition" data-tx="${txNum}" title="Ver hist√≥rico de comprobantes">
                  <span class="text-blue-200">üîç</span>
                  <span class="ml-2 text-xs text-blue-200/80">${proofCount}</span>
                </button>
              ` : `<span class="text-blue-200/40">-</span>`}
            </td>
            <td class="px-3 py-2">${row.usuarioNombre || '-'}</td>
            <td class="px-3 py-2">${row.usuarioCorreo || '-'}</td>
            <td class="px-3 py-2">${row.usuarioTelefono || '-'}</td>
            <td class="px-3 py-2">${row.numero || '-'}</td>
            <td class="px-3 py-2 text-blue-100/80">${row.campaignName || '-'}</td>
            <td class="px-3 py-2">${row.estado || '-'}</td>
            <td class="px-3 py-2">${row.tipoPrecio === 'promocion' ? 'Promoci√≥n' : 'Normal'}</td>
            <td class="px-3 py-2">${formatCurrency(row.precioSeleccionado)}</td>
            <td class="px-3 py-2 text-blue-200/70">${formatDate(row.fechaTransaccion)}</td>
            <td class="px-3 py-2 text-blue-200/70">${formatDate(row.raffleDate)}</td>
          `;
          resultBody.appendChild(tr);
        });
        totalMovEl.textContent = rows.length;
        totalTxEl.textContent = txSet.size;

        document.querySelectorAll('.proof-history-btn').forEach((btn) => {
          btn.addEventListener('click', () => {
            const tx = btn.getAttribute('data-tx');
            if (tx) openProofHistory(tx);
          });
        });
      }

      // Proof history modal wire
      const proofHistoryModal = document.getElementById('proofHistoryModal');
      const proofHistoryCloseBtn = document.getElementById('proofHistoryCloseBtn');
      proofHistoryCloseBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        closeProofHistory();
      });
      proofHistoryModal?.addEventListener('click', (e) => {
        if (e.target === proofHistoryModal) closeProofHistory();
      });
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') closeProofHistory();
      });

      function formatCurrency(val) {
        if (val === null || val === undefined || isNaN(val)) return '-';
        return Number(val).toLocaleString('es-CO', { style: 'currency', currency: 'COP', minimumFractionDigits: 0 });
      }

      function formatDate(val) {
        if (!val) return '-';
        try {
          return new Date(val).toLocaleString('es-CO', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' });
        } catch {
          return val;
        }
      }
    </script>
  </body>
</html>
